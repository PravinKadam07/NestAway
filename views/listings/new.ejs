<%layout("/layouts/boilerplate.ejs")%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <br />
    <h3>Create New Listing</h3>
    <form
      method="post"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          placeholder="Add a title"
          required
        />
        <div class="invalid-feedback">Please provide a valid title.</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          cols="30"
          rows="3"
          class="form-control"
          placeholder="enter description"
          required
        ></textarea>
        <div class="invalid-feedback">Please provide a short description.</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">
          Please provide a valid image URL/Link.
        </div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listing[price]"
            class="form-control"
            placeholder="1200"
            required
          />
          <div class="invalid-feedback">Please provide a valid Price.</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            class="form-control"
            placeholder="India"
            required
          />
          <div class="invalid-feedback">Please provide a valid country.</div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            class="form-control"
            placeholder="Kerla,Pune"
            required
          />
          <div class="invalid-feedback">Please provide a valid Location.</div>
        </div>
      </div>
      <button class="btn btn-dark mb-3 mt-3 add-btn">Add</button>
      <br />
    </form>
  </div>
</div>
